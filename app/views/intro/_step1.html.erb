<div class="flex items-center justify-center h-full">
  <div class="flex flex-col items-center gap-6 opacity-80">
  <!-- ロゴ部分 -->
  <div class="size-72">
    <%= image_tag 'applogo.png' %>
  </div>
  <!-- アプリ説明部分 -->
  <div class="bg-neutral-200 py-6 w-screen ">
    <div class="font-serif text-sm space-y-1.5 text-center text-red-950">
      <p>天気と気分のゆらぎを記録</p>
      <p>あなたの気分パターンを</p>
      <p>見える化するアプリです</p>
    </div>
    <!-- ステップインジケーター -->
    <div class="flex justify-center gap-2 mt-4">
      <% (1..3).each do |step| %>
        <div class="w-2 h-2 rounded-full transition-all duration-300 <%= step == (local_assigns[:current_step] || 1) ? 'bg-amber-500' : 'bg-white' %>">
        </div>
      <% end %>
    </div>
  </div>

  <!-- ナビゲーションボタン -->
  <div class="flex gap-6 items-center mb-2">
  <!-- 戻るボタン -->
  <button data-action="click->intro#prevStep" class="p-3 rounded-full text-white transition-all duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
    </svg>
  </button>

  <!-- 次へボタン -->
  <button data-action="click->intro#nextStep" class="p-3 bg-amber-600 hover:bg-amber-700 bg-opacity-90 rounded-full text-white transition-all duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
    </svg>
  </button>
  </div>

  <!-- ログイン部分 -->
  <div class="flex flex-col items-center gap-4 bg-neutral-200 hover:bg-amber-600 rounded-full py-5 px-7">
    <div class="decoration-solid decoration-0 underline underline-offset-4 break-words">
      <%= link_to login_path, class: "text-sm text-center text-red-950 font-serif" do %>
      <span class="block">既にアカウントがある方</span>
      <span class="block">ログインはこちら</span>
      <% end %>
    </div>
  </div>
</div>
