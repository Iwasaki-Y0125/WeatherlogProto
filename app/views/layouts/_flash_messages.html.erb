<div id="flash-messages" class="absolute top-4 left-4 right-4 z-50 space-y-2">
  <% flash.each do |type, message| %>
    <div class="<%= flash_background_color(type) %> w-full transition-all duration-300 ease-in-out"
        data-controller="flash">
      <%= message %>
    </div>
  <% end %>
</div>
