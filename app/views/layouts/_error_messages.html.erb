<% if object.errors.any? %>
  <div id="error_explanation" class="absolute top-10 left-4 right-4 z-50 space-y-2">
    <ul class="<%= flash_background_color(:danger) %> w-full transition-all duration-300 ease-in-out"
        data-controller="flash">
      <% object.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
